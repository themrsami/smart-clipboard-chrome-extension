{
  "manifest_version": 3,
  "name": "Smart Clipboard Manager",
  "version": "2.1",
  "description": "Secure local clipboard manager. Saves your copied text with timestamps and source info. No data leaves your device.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "commands",
    "contextMenus",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-shortcuts.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "copy-to-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Copy to Smart Clipboard"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
